<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient android:startColor="#ffa000" android:endColor="#ffa000" android:angle="135" />
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient android:endColor="#ffffff" android:startColor="#aaaaaa" android:angle="135" />
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
            <stroke android:width="2dp" android:color="#ff9e08" />
        </shape>
    </item>

    <item android:drawable="@drawable/layer_white_normal" />
</selector>
