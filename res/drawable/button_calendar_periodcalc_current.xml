<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient android:startColor="#ffa000" android:endColor="#ffa000" android:angle="135" />
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <layer-list>
            <item>
		        <shape>
		            <gradient android:endColor="#ffc0c0" android:startColor="#c04040" android:angle="135" />
		            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
		            <stroke android:width="2dp" android:color="#ff9e08" />
		        </shape>
	        </item>
            <item>        
		        <shape android:shape="oval">
		            <solid android:color="#00000000" />
		            <stroke android:width="2dp" android:color="#000000" />
		        </shape>
		    </item>
		</layer-list>
    </item>

    <item android:drawable="@drawable/layer_periodcalc_current" />
</selector>
