<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient android:startColor="#ffa000" android:endColor="#ffa000" android:angle="135" />
            <padding android:top="0dp" android:bottom="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient android:endColor="#c0c0ff" android:startColor="#606080" android:angle="135" />
            <padding android:top="0dp" android:bottom="0dp" />
            <stroke android:width="2dp" android:color="#ff9e08" />
        </shape>
    </item>

    <item android:drawable="@drawable/layer_fertile_current" />
</selector>
